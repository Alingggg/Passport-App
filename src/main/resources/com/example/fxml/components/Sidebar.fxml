<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="626.0" prefWidth="250.0" style="-fx-background-color: #40659C;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.SidebarController">
   <children>
      <ImageView fitHeight="55.0" fitWidth="219.0" layoutX="16.0" layoutY="50.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@../../images/logo.png" />
         </image>
      </ImageView>
      
      <!-- User buttons (visible for regular users) -->
      <Button fx:id="btnUserProfile" layoutX="33.0" layoutY="159.0" mnemonicParsing="false" onAction="#profileBtn" prefHeight="33.0" prefWidth="183.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 15;" text="Profile">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnUserApplication" layoutX="33.0" layoutY="208.0" mnemonicParsing="false" onAction="#applicationBtn" prefHeight="33.0" prefWidth="183.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 15;" text="Application">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      
      <!-- Admin buttons (initially hidden, shown for admins) -->
      <Button fx:id="btnAdminUsers" layoutX="33.0" layoutY="159.0" mnemonicParsing="false" onAction="#usersBtn" prefHeight="33.0" prefWidth="183.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 15;" text="Users" visible="false">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      <Button fx:id="btnAdminApplications" layoutX="33.0" layoutY="208.0" mnemonicParsing="false" onAction="#applicationsBtn" prefHeight="33.0" prefWidth="183.0" style="-fx-background-color: transparent; -fx-text-fill: white; -fx-background-radius: 15;" text="Applications" visible="false">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
      
      <Button fx:id="btnLogout" layoutX="33.0" layoutY="570.0" mnemonicParsing="false" onAction="#logOutBtn" style="-fx-background-color: transparent; -fx-text-fill: white;" text="Log out">
         <font>
            <Font name="Arial Bold" size="14.0" />
         </font>
      </Button>
   </children>
</AnchorPane>