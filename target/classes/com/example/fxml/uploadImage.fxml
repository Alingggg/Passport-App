<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.controller.UploadImageController">
   <children>
      <Label text="Upload Required Documents" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
      
      <!-- Valid ID Section -->
      <VBox spacing="10.0" alignment="CENTER">
         <children>
            <Label text="Valid ID Document" style="-fx-font-weight: bold;" />
            <HBox spacing="10.0" alignment="CENTER">
               <children>
                  <Button fx:id="uploadValidIdButton" text="Upload Valid ID" prefWidth="150" />
                  <Label fx:id="validIdStatusLabel" text="Not uploaded" style="-fx-text-fill: #666;" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Separator />
      
      <!-- Birth Certificate Section -->
      <VBox spacing="10.0" alignment="CENTER">
         <children>
            <Label text="Birth Certificate Document" style="-fx-font-weight: bold;" />
            <HBox spacing="10.0" alignment="CENTER">
               <children>
                  <Button fx:id="uploadBirthCertButton" text="Upload Birth Certificate" prefWidth="150" />
                  <Label fx:id="birthCertStatusLabel" text="Not uploaded" style="-fx-text-fill: #666;" />
               </children>
            </HBox>
         </children>
      </VBox>
      
      <Separator />
      
      <!-- Action Buttons -->
      <VBox spacing="10.0" alignment="CENTER">
         <children>
            <ProgressIndicator fx:id="progressIndicator" visible="false" />
            <Label fx:id="generalStatusLabel" text="Ready to upload documents" />
            <HBox spacing="15.0" alignment="CENTER">
               <children>
                  <Button fx:id="submitButton" text="Submit Documents" prefWidth="150" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" />
                  <Button fx:id="backButton" text="Back to Main" prefWidth="120" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
   </padding>
</VBox>